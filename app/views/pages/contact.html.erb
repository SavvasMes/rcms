<%= @title %>

<%= simple_form_for :contact, url: send_contact_path, defaults: {required: false}, html:{novalidate: false} do |f| %>
<%= f.input :name, label: 'Όνομα', required: true %>
<%= f.input :text, as: :text, placeholder: 'Type text..' , input_html: {class: 'form-control-lg'} %>

<%= f.button :submit, 'Submit', class: 'btn-primary' %>

<% end %>