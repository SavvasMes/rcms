<% if @page.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @page.errors.full_messages.each do |error| %>
      <li>
        <%=error %>
      </li>
      <% end %>
    </ul>
    <%end %>
  </div>


<div class="card">
  <div class="card-header"><%= @page.new_record? ? 'New' : 'Edit' %> Page</div>
  <div class="card-body">
    <%=simple_form_for @page do |f| %>
      <%= f.input :title %>
      <%= f.input :draft %>
      <%= f.input :home_page %>
      <hr>
      <%= f.input :meta_title %>
      <%= f.input :meta_keyword %>
      <%= f.input :meta_description %>
      <hr>
      <%= f.input :content %>
      <%= f.button :submit, "Save", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>